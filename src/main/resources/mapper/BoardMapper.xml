<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hanuri.website.dao.BoardMapper">
    <!--데이터 입력-->
    <insert id="save" parameterType="hanuri.website.domain.dto.Board.Board" useGeneratedKeys="true" keyProperty="boardId">
        insert into board(title, member_id, content)
        values (#{title}, #{memberId}, #{content})
    </insert>
    <!--데이터 전체 조회-->
    <select id="findAll" resultType="hanuri.website.domain.dto.Board.Board">
        select *
        from board
    </select>
</mapper>